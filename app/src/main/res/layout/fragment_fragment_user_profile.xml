<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_id"
            android:src="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">


        </ImageView>

        <TextView
            android:id="@+id/name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textAllCaps="true"
            android:textColor="#010203"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/hello_id"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_id"
            android:layout_marginRight="-200dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/name_id"
            android:text="Hello, "
            android:textColor="#010203"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/img_id"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_accessibility_black_24dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_id"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="65dp"
            android:text="Your Body Info"
            android:textSize="30dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textFontWeight="5"
                    android:text="Height : "
                    android:layout_below="@id/weight_id"
                    android:textColor="#010203"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/height_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:textSize="20dp"
                    android:enabled="false"
                    android:hint="0.0"
                    android:textColorHint="@color/graylight"
                    android:ems="10"
                    android:cursorVisible="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textFontWeight="5"
                    android:text="Age : "
                    android:layout_below="@id/height_id"
                    android:textColor="#010203"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/age_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:hint="0"
                    android:textColorHint="@color/graylight"
                    android:ems="10"
                    android:textSize="20dp"
                    android:enabled="false"
                    android:cursorVisible="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textFontWeight="5"
                    android:text="Activity Level : "
                    android:layout_below="@id/age_id"
                    android:textColor="#010203"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/activity_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:hint="0.0"
                    android:textColorHint="@color/graylight"
                    android:ems="10"
                    android:textSize="20dp"
                    android:enabled="false"
                    android:cursorVisible="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textFontWeight="5"
                    android:text="Goal weight : "
                    android:layout_below="@id/activity_id"
                    android:textColor="#010203"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/goal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:textSize="20dp"
                    android:hint="0.0"
                    android:textColorHint="@color/graylight"
                    android:ems="10"
                    android:enabled="false"
                    android:cursorVisible="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textFontWeight="5"
                    android:text="Weight : "
                    android:layout_below="@id/hello_id"
                    android:textColor="#010203"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/weight_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:hint="0.0"
                    android:textColorHint="@color/graylight"
                    android:ems="10"
                    android:textSize="20dp"
                    android:enabled="false"
                    android:cursorVisible="true" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:background="@drawable/buttonstylegradient"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Update"/>

</LinearLayout>
