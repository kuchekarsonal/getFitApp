<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_calorie_display"
    tools:context=".Fragments.Fragment_Home">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/calorie_display"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

    <RelativeLayout
        android:background="#EDB5C5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calorie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CALORIES"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/calorie_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/calorie_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:progress="70"
            android:progressDrawable="@drawable/circular_progress" />

        <TextView
            android:id="@+id/calorie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/calorie_progress"
            android:text="1500 Kcal left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/carbs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/calorie_value"
            android:layout_alignParentLeft="true"
            android:text="CARBS"
            android:textColor="#000"
            android:textSize="20sp"
            />

        <ProgressBar
            android:id="@+id/carbs_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:indeterminate="false"
            android:progress="50" />

        <TextView
            android:id="@+id/carbs_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/carbs_progress"
            android:text="400 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"


            />

        <TextView
            android:id="@+id/protein_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/calorie_value"
            android:text="PROTEIN"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/protein_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_centerHorizontal="true"
            android:progress="70"
            />

        <TextView
            android:id="@+id/protein_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/protein_progress"
            android:text="150 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/fats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/calorie_value"
            android:layout_alignParentRight="true"
            android:text="FATS"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/fats_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:progress="40"
            />

        <TextView
            android:id="@+id/fats_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/fats_progress"
            android:layout_alignParentRight="true"
            android:text="230 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/textview"
        android:layout_below="@+id/calorie_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Welcome to Home fragment" />



</RelativeLayout>