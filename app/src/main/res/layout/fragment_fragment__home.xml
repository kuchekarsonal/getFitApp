<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F00B0A08"
    tools:context=".Fragments.Fragment_Home">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/calorie_display"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

    <RelativeLayout
        android:background="#EDB5C5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calorie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CALORIES"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/calorie_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/calorie_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress" />

        <TextView
            android:id="@+id/calorie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/calorie_progress"
            android:text="1500 Kcal left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/carbs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/calorie_value"
            android:layout_alignParentLeft="true"
            android:text="CARBS"
            android:textColor="#000"
            android:textSize="20sp"
            />

        <ProgressBar
            android:id="@+id/carbs_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:indeterminate="false"
            android:progress="0" />

        <TextView
            android:id="@+id/carbs_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/carbs_progress"
            android:text="400 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"


            />

        <TextView
            android:id="@+id/protein_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/calorie_value"
            android:text="PROTEIN"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/protein_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_centerHorizontal="true"
            android:progress="0"
            />

        <TextView
            android:id="@+id/protein_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/protein_progress"
            android:text="150 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/fats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/calorie_value"
            android:layout_alignParentRight="true"
            android:text="FATS"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <ProgressBar
            android:id="@+id/fats_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/carbs_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:progress="0"
            />

        <TextView
            android:id="@+id/fats_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/fats_progress"
            android:layout_alignParentRight="true"
            android:text="230 g left"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@+id/calorie_display"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="16dp"
                android:text="Breakfast"
                android:textColor="#000000"/>
            <!--<view-->

                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#000000"/>-->
            <!--<androidx.recyclerview.widget.RecyclerView-->
                <!--android:id="@+id/recyclerViewBreakfast"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->


            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/imageView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/breakfast" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/addBreakfastList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
                <Button
                    android:id="@+id/add_breakfast_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Breakfast">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginLeft="16dp"
                    android:text="Lunch"
                    android:textColor="#000000"/>
                <!--<view-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="#000000"/>-->



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/imgLunch"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/lunch" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addLunchList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Lunch">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginLeft="16dp"
                    android:text="Dinner"
                    android:textColor="#000000"/>
                <!--<view-->

                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="#000000"/>-->



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:id="@+id/imgDinner"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/dinner" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/addDinnerList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Dinner">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>