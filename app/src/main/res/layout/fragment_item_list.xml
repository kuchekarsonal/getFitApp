<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dietPlan"
    android:orientation="vertical"
    android:name="com.example.getfit.Fragments.Fragment_dietPlan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".Fragments.Fragment_dietPlan">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="#4a4a4a"

        android:text="Your Diet Plan" />
    <LinearLayout
        android:id="@+id/LLRegularplan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="32dp"
        android:background="@drawable/bghome"

        android:padding="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fat_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Regular Plan"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Our Recommened regular Plan"
                android:textColor="#bebebe"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLStrengthplan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        android:layout_marginBottom="10dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/bghome"

        android:padding="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/muscle_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Strength Plan"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Our Recommended Strength Plan"
                android:textColor="#bebebe"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLWeightgainplan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/bghome"
        android:layout_marginBottom="10dp"

        android:padding="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/maintenance_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Weight Gain Plan"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Our Recommened regular Plan"
                android:textColor="#bebebe"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLweightLossPlan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bghome"

        android:padding="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fat_icon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Weight Loss Plan"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Our Recommended Weight Loss Plan"
                android:textColor="#bebebe"/>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/btn_continue"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:text="continue"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn_continue"
        />
    
     <Button
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:background="@drawable/btn_cancel"
         android:layout_marginRight="32dp"
         android:layout_marginLeft="32dp"/>

</LinearLayout>